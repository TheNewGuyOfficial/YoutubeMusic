<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.thenewguy.official.youtubemusic.PlaylistActivity"
    tools:showIn="@layout/app_bar_playlist">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorRed">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="105dp"
            android:id="@+id/imageview_playlist_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:id="@+id/textview_playlist_title"
            android:maxLines="3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:id="@+id/textview_playlist_channel"
            android:maxLines="2"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageview_playlist_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:maxLines="1"
            android:id="@+id/textview_playlist_num_items"
            android:layout_alignBottom="@+id/imageview_playlist_image"
            android:layout_toEndOf="@+id/imageview_playlist_image" />
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:id="@+id/list_view_playlist">

    </ListView>
</LinearLayout>